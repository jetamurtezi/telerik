<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - telerik</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/telerik.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/default-theme.css" />
    <link href="https://kendo.cdn.telerik.com/themes/10.0.1/bootstrap/bootstrap-main.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- ✅ Scripts: jQuery first -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <!-- ✅ Kendo dependencies -->
    <script src="https://kendo.cdn.telerik.com/2023.1.314/js/jszip.min.js"></script>
    <script src="~/telerik/js/kendo.all.min.js"></script>
    <script src="~/telerik/js/kendo.aspnetmvc.min.js"></script>

    <!-- Bootstrap & site JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>

    <header>
        <nav class="main-navbar">
            <div class="nav-logo">
                <a href="/" class="nav-logo-link">Libraria</a>
            </div>

            <ul class="nav-links">
                <li><a href="/" class="@(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")">Home</a></li>
                <li><a href="/Book/TreeListView" class="@(ViewContext.RouteData.Values["action"].ToString() == "TreeListView" ? "active" : "")">Kategorite</a></li>
                <li><a href="/Book/GridView" class="@(ViewContext.RouteData.Values["action"].ToString() == "GridView" ? "active" : "")">Libra</a></li>
                <li> <a href="/Book/Orders" class="@(ViewContext.RouteData.Values["action"].ToString() == "Orders" ? "active" : "")">Porositë</a></li>
                <li> <a href="/Book/Dashboard" class="@(ViewContext.RouteData.Values["action"].ToString() == "Dashboard" ? "active" : "")">Dashboard</a></li>
            </ul>
        </nav>
    </header>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="custom-footer mt-5">
        <div class="footer-inner">
            <p>
                &copy; @DateTime.Now.Year - telerik. Të gjitha të drejtat e rezervuara.
                <a href="/Home/Privacy">Privacy</a>
            </p>
            <div class="social-icons">
                <a href="https://facebook.com" target="_blank"><i class="fab fa-facebook-f"></i></a>
                <a href="https://twitter.com" target="_blank"><i class="fab fa-twitter"></i></a>
                <a href="https://instagram.com" target="_blank"><i class="fab fa-instagram"></i></a>
                <a href="https://linkedin.com" target="_blank"><i class="fab fa-linkedin-in"></i></a>
            </div>
        </div>
    </footer>





    @RenderSection("Scripts", required: false)

    <!-- ✅ Enable Kendo deferred scripts -->
    @Html.Kendo().DeferredScripts()
</body>
</html>
